[Unit]
Description=camera_worker service
After=docker.service
Requires=docker.service

[Install]
WantedBy=default.target

[Service]
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill camera_worker
ExecStartPre=-/usr/bin/docker rm camera_worker
ExecStartPre=/usr/bin/docker pull paulscherrerinstitute/cam_server
ExecStart=/usr/bin/docker run --name camera_worker --env-file /cam_server_configuration/camera_environment -v /cam_server_configuration/configuration:/configuration --net=host paulscherrerinstitute/cam_server camera_worker -b /configuration/camera_config --log_level=INFO
ExecStop=/usr/bin/docker stop camera_worker
Restart=always